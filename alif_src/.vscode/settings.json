        "type_traits": "c",
        "algorithm": "c",
        "xiosbase": "c",
        "xlocale": "c",
        "xutility": "c",
        "new": "cpp",
        "array": "c",
        "format": "c",
        "initializer_list": "c",
        "map": "c",
        "vector": "c",
        "xstring": "c",
        "xtree": "c"
